# Slicing Operation

x = 'Honesty is the best policy'
# print(len(x))

i = -2

# print(x[0:20:1])
#
# print(x[26:0:-1])
# # or
# print(x[::-1])
#
# print(x[5:])

nl = "\n"
for i in range(0,len(x)):

    if x[i]==" ":
        print("")
    else:
        print(x[i],end="")
print("")
print(nl)

# OR
for i in x:
    if i ==" ":
        print("")
    else:
        print(i,end="")
#
# "break"
print (nl)

